{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": ["after 9am every weekday"],
  "timezone": "Asia/Seoul",
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^hilingual\\."
      ],
      "enabled": false
    },
    {
      "matchDepNames": ["org.jlleitschuh.gradle.ktlint"],
      "enabled": false
    },
    {
      "description": "Ignore updates for Ruby and Fastlane to prevent CI breakage",
      "matchPackagePatterns": ["^ruby", "^fastlane"],
      "enabled": false
    }
  ],
  "postUpdateOptions": ["bundler"]
}

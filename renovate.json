{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": ["after 9am every weekday"],
  "timezone": "Asia/Seoul",
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^hilingual\\."
      ],
      "enabled": false
    },
    {
      "matchDatasources": ["gradle"],
      "matchPackageNames": ["org.jlleitschuh.gradle.ktlint"],
      "enabled": false
    }
  ]
}
